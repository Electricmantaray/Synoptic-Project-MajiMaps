<!-- Header -->
<header class="fixed top-0 left-0 z-10000 w-full px-4 py-2">
  <div class="
        mx-auto flex max-w-6xl items-center justify-between rounded-[15px] bg-[#e5e5eb] px-6 py-3 shadow-md
        sm:flex-row
        flex-col
        sm:py-3
        py-2
      ">
    <!-- Logo Title -->
    <a href="<%= common.logo.link %>">
      <img src="<%= common.logo.src %>" alt="<%= common.logo.alt %>"
        class="<%= common.logo.style %>>" />
    </a>

    <!-- Navigation -->
    <nav class="
        fixed bottom-0 left-0 z-50 flex w-full justify-center gap-6 bg-[#e5e5eb] py-3 text-lg font-medium text-black shadow-md
        sm:static sm:w-auto sm:bg-transparent sm:py-0 sm:shadow-none
      ">
      <% common.navigation.links.forEach(section => { %>
        <a href="<%= section.href %>" class="<%= common.navigation.style %>"><%= section.label %></a>
      <% }) %>
    </nav>
  </div>
</header>