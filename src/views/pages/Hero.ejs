<!-- Hero Section -->
<section id="<%= hero.id %>" class="relative min-h-[100vh] overflow-hidden">
  <!-- Background Image -->
  <img
    src="<%= hero.background.image.src %>"
    alt="<%= hero.background.image.alt %>"
    class="<%= hero.background.image.style %>"
  />

  <!-- Gradient Overlay -->
  <div class="<%= hero.background.gradientTransition.style %> <%= hero.background.gradientTransition.gradient %>"></div>

  <!-- Content -->
  <div class="relative z-20 mx-auto flex h-full max-w-5xl flex-col items-start justify-center space-y-10 px-6 pt-60">
    <h1 class="<%= hero.content.titleStyle %>"><%= hero.content.title %></h1>
    <p class="<%= hero.content.subtitleStyle %>"><%= hero.content.subtitle %></p>
    <div class="flex gap-4">
      <% hero.content.buttons.forEach(btn => { %>
        <a href="<%= btn.href %>" class="<%= btn.style %>"><%= btn.label %></a>
      <% }); %>
    </div>
  </div>

  <!-- Scroll Down Chevron -->
  <a href="<%= hero.scrollChevron.href %>" class="<%= hero.scrollChevron.style %>">
    <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="<%= hero.scrollChevron.icon.stroke %>" stroke-width="<%= hero.scrollChevron.icon.strokeWidth %>">
      <path stroke-linecap="round" stroke-linejoin="round" d="<%= hero.scrollChevron.icon.d %>" />
    </svg>
  </a>

</section>